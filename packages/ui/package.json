{
  "name": "@orama/ui",
  "version": "1.2.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oramasearch/orama-ui.git",
    "directory": "packages/ui"
  },
  "type": "module",
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js",
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js"
    },
    "./contexts": {
      "types": "./dist/contexts/index.d.ts",
      "import": "./dist/contexts/index.js",
      "require": "./dist/contexts/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:react": "tsdown -c tsdown.react.config.ts",
    "build:preact": "tsdown -c tsdown.preact.config.ts",
    "build:components": "npm run build:react && npm run build:preact",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsdown --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "@orama/core": "^1.2.7",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.28.0",
    "tailwindcss": "^4.1.5",
    "preact": "^10.20.0",
    "tsdown": "^0.15.6",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "prism-react-renderer": "^1.3.5",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "throttleit": "^2.1.0"
  }
}
